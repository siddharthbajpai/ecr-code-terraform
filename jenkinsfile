pipeline {
    agent any
    parameters {
        string(name: 'BRANCH', defaultValue: 'master', description: 'Branch to checkout')
    }
    stages {
        stage('Clone') {
            steps {
             
                    git credentialsId: 'Github',
                        branch: "${params.BRANCH}",
                        url: 'https://github.com/siddharthbajpai/ecr-code-terraform'
                
            }
        }
    }
    post {
        always {
            // Actions to be run after the pipeline execution, e.g., cleanup
            echo 'Pipeline finished.'
        }
    }
}
